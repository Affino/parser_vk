---NEW TABLE---

CREATE TABLE vk_info (
	id INT AUTO_INCREMENT PRIMARY KEY,
	vk_id INT NOT NULL UNIQUE,
    name VARCHAR(100),
	photo TEXT,
	url VARCHAR(40),
	followers_count INT,
	city VARCHAR(30),
	status TEXT,
	is_closed BOOLEAN,
	verified INT,
	country VARCHAR(30),
	description TEXT,
	site VARCHAR(100),
	contact VARCHAR(140),
	last_update TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP,
	is_group BOOLEAN
);



